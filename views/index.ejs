            z-index: 1000; 
        }
        nav a {
            margin: 0 15px; 
            text-decoration: none;
            color: #fff; 
            font-weight: bold;
        }
        nav a:hover {
            text-decoration: underline;
        }
        .content {
            margin-top: 60px; 
            padding: 20px; 
        }
        h1, p {
            color: #333; 
        }
        .tiktok-info {
            background-color: #fff; 
            padding: 20px; 
            margin: 20px 0; 
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .tiktok-info h2 {
            color: #e39cc2;
        }
        .tiktok-info p {
            color: #555;
        }
        .tiktok-info img {
            max-width: 100%; 
            height: auto; 
            border-radius: 8px;
        }
    </style>
</head>
